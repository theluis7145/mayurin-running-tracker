rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザードキュメントのルール
    match /users/{userId} {
      // ユーザーは自分のプロフィールのみ読み書き可能
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ランニング記録のサブコレクション
      match /runRecords/{recordId} {
        // ユーザーは自分の記録のみ読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // スケジュール済みランのサブコレクション
      match /scheduledRuns/{scheduleId} {
        // ユーザーは自分のスケジュールのみ読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // 作成・更新時のデータ検証
        allow create, update: if request.auth != null
          && request.auth.uid == userId
          && request.resource.data.title is string
          && request.resource.data.scheduledTime is timestamp
          && request.resource.data.isActive is bool
          && request.resource.data.timezone is string
          && request.resource.data.recurrence is map
          && request.resource.data.createdAt is timestamp
          && request.resource.data.updatedAt is timestamp;
      }
    }
  }
}
